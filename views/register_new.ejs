<%- include('./includes/scripts.ejs'); %>
<html>
	<head>
		<title><%= title %></title>
	</head>
	<body class="login_page">

		<!-- main page container -->
		<div class="container">
			<div class="row">
				<!-- Registration form -->
					<div class="col-lg-4 col-md-3 col-sm-3"></div>
					<div class="col-lg-4 col-md-6 col-sm-6">
						<img src="./views/images/logo_w_sub_admin.png" class="logo" style="margin-top: 56px;">
						<div id="show_noti" role="alert"></div>
						<form id="register" method="POST">
							<div class="panel panel-default">
								<div class="panel-body">

									<div class="form-group">
										<label for="org_name">Organisation Name:</label>
										<input type="text" class="form-control login_input" name="org_name" placeholder="Organisation Name" autocomplete="off" required>
									</div>

									<div class="form-group">
										<label for="fname">Firstname:</label>
										<input type="text" class="form-control login_input" name="fname" placeholder="Fistname" autocomplete="off" required>
									</div>

									<div class="form-group">
										<label for="lname">Lastname:</label>
										<input type="text" class="form-control login_input" name="lname" placeholder="Lastname" autocomplete="off" required>
									</div>

									<div class="form-group">
										<label for="email">Email:</label>
										<input type="email" class="form-control login_input" name="email" placeholder="Email" autocomplete="off" required>
									</div>

									<div class="form-group">
										<label for="password">Password:</label>
										<input type="password" class="form-control login_input" name="password" placeholder="Password" autocomplete="off" required>
									</div>

									<div class="form-group">
										<label for="password_conf">Confirm Password</label>
										<input type="password" class="form-control login_input" name="password_conf" placeholder="Confirm Password" autocomplete="off" required>
									</div>

								</div>

								<div class="panel-footer">
									<div class="form-group">
										<p>
											<button class="btn btn-warning btn-right" type="submit" id="reg_btn">Register</button>
											<a href="/login">
												<span class="btn btn-danger btn-right">Login</span>
											</a>
										</p>
									</div>
								</div>
							</div>
						</form>

					</div>
					<div class="col-lg-4 col-md-3 col-sm-3"></div>
				</div>
				<%- include('./includes/footer.ejs'); %>
			</div>
		</div>

		<script type="text/javascript" src="../views/scripts/register.js"></script>

	</body>
</html>
